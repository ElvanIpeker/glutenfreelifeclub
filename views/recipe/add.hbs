<form action="/recipe/add" method="POST">
<label>Recipe Name
    <input type="text" name="name" placeholder="name of the recipe">
</label>
<br/>
<label>Servings
    <input type="text"name="numServings" placeholder="number of servings">

</label>

<br/>
<label>Origin
    <input type="text"name="origin" placeholder="Country of Origin">

</label>
<br/>

<label>Calories per Servings
    <input type="text" name="calorie" placeholder="calories">

</label>
<br/>
<label>CookTime
    <input type="text"name="cookTimeMinutes" placeholder="cook time in minutes">

</label>
<br/>
<label>Ingredients
