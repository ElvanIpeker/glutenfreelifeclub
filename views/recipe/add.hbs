<form action="/recipe/add" method="POST" enctype="multipart/form-data">
<label>Recipe Name
    <input type="text" name="name" placeholder="name of the recipe">
</label>
<br/>
<label>Servings
    <input type="text"name="numServings" placeholder="number of servings">

</label>

<br/>
<label> Country of Origin
    <input type="text" name="origin" placeholder="Country of Origin">

</label>
<br/>

<label>Calories per Servings
    <input type="text" name= "calorie" placeholder="calories">

</label>
<br/>
<label>CookTime
    <input type="text"name="cookTimeMinutes" placeholder="cook time in minutes">

</label>
<br/>
<label>Ingredients
    <input type="text" name="ingredients" placeholder="ingredients">

</label>
<br/>
<label>Instructions
    <input type="text" name="instructions" placeholder="prepare method">

</label>

<br/>
<input type="file"name="image"/>
<br/>
{{#if img}}
<img src="{{img}}"/>
{{/if}}

<button type="submit">Submit</button>
</form>
{{#if errorMessage}}
{{errorMessage}}
{{/if}}










